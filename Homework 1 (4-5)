exercise 4 function:

from scipy import *
from numpy import *
from scipy.linalg import solve

def createV(x):
    N=len(x)
    V=ones(len(x))
    for i in range(1,N):
        k=x**i
        V=column_stack((k,w))
    return V
    
createV(array([2,2,3,4,5]))

exercise 5 function:

from scipy.linalg import solve
from scipy import *
from numpy import *

def interpoly(x,y):
    N=len(x)
    V=ones(len(x))
    for i in range(1,N):
        k=array(x)**i
        V=column_stack((k,V))
    y=y.reshape(len(y),1)
    return solve(V,y)    

print(interpoly(array([1,0,2]),array([4,1,3]))
    
note exercise 5:

from scipy.linalg import solve
from scipy import *
from numpy import *

y=array([4,1,3])
u=y.reshape(len(y),1) 
print(u)
print(w)
solve(w,u)

